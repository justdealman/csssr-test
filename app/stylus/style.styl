// Fonts

@import './mixins/fonts.styl'
webfont('Courier New', 'couriernew-regular', normal)
webfont('PT Sans', 'ptsans-regular', normal)
webfont('PT Sans', 'ptsans-bold', bold)

// Variables

colorBrown = #2f1b15
colorGreyDark = #231f20
colorBlack = #000000
colorGrey = #3d3d3d

// Default

html
	height 100%
	*
		max-height 1000000px
		vertical-align top
		box-sizing border-box

	*:before,
	*:after 
		vertical-align top
		box-sizing border-box

body
	width 100%
	height 100%
	color colorBrown
	font-size 12px
	line-height 16px
	font-family 'PT Sans', sans-serif
	padding 0
	margin 0
	background #797979
	-webkit-tap-highlight-color transparent
	
p
	text-indent 0
	padding 0
	margin 0 0 16px

table
	margin 0 0 16px
	border-collapse collapse
	td
		padding 0

:focus
	outline none

img
	padding 0
	margin 0
	border 0

a
	color colorBrown
	text-decoration none
	&:hover
		text-decoration none

form
	margin 0

ul 
	margin 0 0 10px 16px
	padding 0
	li
		padding 0 
		list-style none

ol
	margin 0 0 10px 18px
	padding 0
	li
		padding 0 0 0 16px	

input
select
textarea
	color colorGreyDark
	font-size 12px
	font-family 'Courier New', sans-serif
	padding 0
	margin 0
	background none
	border 0
	box-sizing border-box

textarea
	overflow auto

button
	font-family 'PT Sans', sans-serif
	margin 0
	border 0
	box-sizing border-box

	&::-moz-focus-inner
		padding 0
		border 0

::-webkit-input-placeholder
	color #a1a1a1

:-moz-placeholder
	color #a1a1a1

::-moz-placeholder
	color #a1a1a1

:-ms-input-placeholder
	color #a1a1a1

// Unoform

.checker
.radio
	position relative
	cursor pointer
	
	input
	span
		cursor pointer

	span
		position relative
		display block
		
	input
		opacity 0
		
.checker
	width 19px
	height 18px
	
	input
	span
		width 19px
		height 18px
		
	span
		background url('data:image/png;base64,') no-repeat 0 0

		&:before
			content ''
			position absolute
			left 3px
			bottom 1px
			width 21px
			height 27px
			background url('data:image/png;base64,') no-repeat 0 0
			opacity 0
		
		&.checked
			&:before
				opacity 1

.radio
	width 28px
	height 28px
	
	input
	span
		width 28px
		height 28px
		
	span
		background url('data:image/png;base64,') no-repeat 0 0

		&:before
			content ''
			position absolute
			left 8px
			top 8px
			width 100%
			height 100%
			background url('data:image/png;base64,') no-repeat 0 0
			opacity 0
		
		&.checked
			&:before
				opacity 1
		
	
// Core

.form
	position relative
	width 1000px
	max-width 1000px
	padding 154px 118px 2px 114px
	margin 0 auto
	background url('../img/bg.png') repeat 50% 0
	
	&--logo
		position absolute
		left 112px
		top 62px
		display block
		width 154px
		height 52px
		background url('../img/logo.png') repeat 0 0
		
	&--secret
		position absolute
		right 54px
		top 48px
		display block
		width 252px
		height 106px
		background url('../img/secret-icon.png') repeat 0 0
		
	&--title
		display block
		height 118px
		margin 0 0 42px
		background url('../img/title.png') no-repeat 50% 0 / auto 100%
		
	&__group
		margin 0 0 63px
	
	&--subtitle
		display block
		font-size 24px
		line-height 32px
		font-weight bold
		margin 0 0 24px
		
	&--desc
		display block
		color colorGrey
		font-size 15px
		line-height 23px
		margin -19px 0 24px
		
	&__item
		display flex
	
		&--label
			align-self flex-end
			font-size 22px
			line-height 28px
			font-weight bold
			padding-right 15px
			margin 0 0 5px
		
		&--input
			flex-grow 2
			
	&__list
		column-count 3
		column-gap 30px
		margin -2px 0 -13px
		
		&--item
			break-inside avoid
			padding 5px 0
			margin 0
			
			
		&--label
			position relative
			display inline-block
			color colorBlack
			font-size 21px
			line-height 25px
			font-weight bold
			padding-left 27px
			
			.checker
				position absolute
				left -1px
				top 6px
				
	&__row
		font-size 0
		margin -8px 0 0
		
		&--label
			position relative
			display inline-block
			color colorBlack
			font-size 20px
			line-height 25px
			font-weight bold
			padding-left 33px
			margin 0 22px 10px 0
			
			.radio
				position absolute
				left -1px
				top -2px
				
	&-skill
		margin 34px 0 -34px 1px
		
		&--slider
			position relative
			z-index 1
			font-size 0
			height 14px
			
			&:after
				content ''
				position absolute
				left 0
				top 0
				width 100%
				width calc(100% + 2px)
				height 100%
				background url('../img/input-line.png') no-repeat right -49px
				background-size 100% auto
			
			.ui-slider-handle
				position absolute
				top -12px
				display block
				width 17px
				height 14px
				cursor pointer
				margin-left -8px
				background url('data:image/png;base64,') no-repeat 0 0
				
		&--marks
			position relative
			height 25px
			margin -8px 0 2px
			
			i
				position absolute
				top 0
				display block
				width 3px
				height 12px
				margin-left -1px
				background #422720
				border-left 1px solid #9f8365
				
				&:first-child
				&:last-child
					height 25px
					
		&__desc
			font-size 0
			margin 0 0 10px

			&--label
				display inline-block
				font-size 13px
				line-height 19px
				font-weight bold
			
				&_1
					width 20%
				
				&_2
					width 30%
					
				&_3
					width 25%
					
				&_4
					width 25%
					
				&:first-child
					margin-top 2px
					
				&:last-child
					text-align right
					margin-top 7px
					
				span
					display inline-block
					max-width 170px
					margin 0 -3px 0 -1px
				
input.standart
textarea.standart
	width 100%
	font-size 30px
	background url('../img/input-line.png') repeat-y 100% -3px
	
	&_date
		width 206px
		text-align center
	
input.standart
	padding 12px 14px

textarea.standart
	line-height 58px
	padding 0 5px
	resize vertical
	-ms-overflow-style none
	
	&::-webkit-scrollbar
		display none